{{>header}}
<body>
{{>navbar}}

<!-- main header -->
<div class="contain-fluid main_header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="row">
                <!-- left side div -->

                <div class="col-md-6 col-12 main_header_left">
                    <h2>Welcome to my weather app</h2>
                    <h1>Get the latest <span style = "color: blue;"><a href="/weather" style = "text-decoration: none;">Weather</a></span> Info of your city</h1>
                    <a href="/weather"><button>Check Now</button></a>
                </div>
                <!-- right side div -->
                <div class="col-md-6 col-12 main_header_right">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img src="images/rainy2.jpg" class="w-100" style="height:auto;"  alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="images/img3.jpg" class="w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="images/sr1.jpg" class="w-100" alt="...">
                          </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Next</span>
                        </button>
                      </div>
                </div>
            </div>
        </div>
    </div>
</div>



